{
  "name": "ekill",
  "version": "1.4",
  "description": "Remove unwanted elements from a page quickly!",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "16": "skull-and-bones-16.png",
      "48": "skull-and-bones-48.png",
      "128": "skull-and-bones-128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ekill.js"],
      "css": ["ekill.css"]
    }
  ],
  "icons": {
    "16": "skull-and-bones-16.png",
    "48": "skull-and-bones-48.png",
    "128": "skull-and-bones-128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "MacCtrl+K"
      }
    }
  }
}
